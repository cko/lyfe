# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                controllers.ApplicationController.index
GET     /test/:msg       controllers.ParamController.msg(msg: String)

# User management

GET     /user/new        controllers.UserController.createNewUserForm
POST    /user/new        controllers.UserController.saveUser
GET     /user/login      controllers.UserController.createLoginForm
POST    /user/login      controllers.UserController.login
GET     /user/profile    controllers.UserController.editProfile
PUT     /user/:id        controllers.UserController.updateProfile(id: Long)
POST    /user/logout     controllers.UserController.logout
DELETE  /user/:id        controllers.UserController.delete(id: Long)

GET     /location/new    controllers.LocationController.create
POST    /location        controllers.LocationController.save
GET     /location        controllers.LocationController.list